generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullName  String
  birthday  DateTime
  password  String
  role      UserRole @default(MEMBER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  prayerTeamMember1 PrayerTeam[] @relation("Member1")
  prayerTeamMember2 PrayerTeam[] @relation("Member2")
  moderatorSchedules ModeratorSchedule[]
  prayerRequests    PrayerRequest[]

  @@map("users")
}

model PrayerTeam {
  id        String   @id @default(cuid())
  member1Id String
  member2Id String
  weekStart DateTime
  weekEnd   DateTime
  createdAt DateTime @default(now())

  member1 User @relation("Member1", fields: [member1Id], references: [id])
  member2 User @relation("Member2", fields: [member2Id], references: [id])

  @@map("prayer_teams")
}

model ModeratorSchedule {
  id           String      @id @default(cuid())
  userId       String
  date         DateTime
  dayType      DayType
  startTime    String      // "18:00" for Monday, "16:30" for Saturday
  endTime      String      // "19:00" for Monday, "18:00" for Saturday
  isAutoGenerated Boolean  @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("moderator_schedules")
}

model PrayerSubject {
  id          String   @id @default(cuid())
  title       String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("prayer_subjects")
}

model News {
  id          String   @id @default(cuid())
  title       String
  content     String
  eventDate   DateTime?
  isEvent     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("news")
}

model PrayerRequest {
  id          String   @id @default(cuid())
  title       String
  content     String
  isAnonymous Boolean  @default(false)
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@map("prayer_requests")
}

enum UserRole {
  ADMIN
  MEMBER
}

enum DayType {
  MONDAY
  SATURDAY
}
