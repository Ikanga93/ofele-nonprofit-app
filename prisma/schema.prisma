generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  fullName  String
  birthday  DateTime
  password  String
  role      UserRole   @default(MEMBER)
  department Department @default(INTERCESSION)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  // Relations
  prayerTeamMember1 PrayerTeam[] @relation("Member1")
  prayerTeamMember2 PrayerTeam[] @relation("Member2")
  moderatorSchedules ModeratorSchedule[]
  prayerRequests    PrayerRequest[]
  familyBoardPosts  FamilyBoard[]

  @@map("users")
}

model PrayerTeam {
  id        String   @id @default(cuid())
  member1Id String
  member2Id String
  weekStart DateTime
  weekEnd   DateTime
  createdAt DateTime @default(now())

  member1 User @relation("Member1", fields: [member1Id], references: [id])
  member2 User @relation("Member2", fields: [member2Id], references: [id])

  @@map("prayer_teams")
}

model ModeratorSchedule {
  id           String      @id @default(cuid())
  userId       String
  date         DateTime
  dayType      DayType
  startTime    String      // "18:00" for Monday, "16:30" for Saturday
  endTime      String      // "19:00" for Monday, "18:00" for Saturday
  isAutoGenerated Boolean  @default(true)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("moderator_schedules")
}

model PrayerSubject {
  id          String     @id @default(cuid())
  title       String
  description String?
  isActive    Boolean    @default(true)
  department  Department @default(INTERCESSION)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("prayer_subjects")
}

model News {
  id          String     @id @default(cuid())
  title       String
  content     String
  eventDate   DateTime?
  isEvent     Boolean    @default(false)
  department  Department @default(INTERCESSION)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@map("news")
}

model PrayerRequest {
  id          String   @id @default(cuid())
  title       String
  content     String
  isAnonymous Boolean  @default(false)
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id])

  @@map("prayer_requests")
}

model FamilyBoard {
  id        String   @id @default(cuid())
  title     String
  content   String
  imageUrl  String?  // Optional image URL for the post
  userId    String
  views     Int      @default(0) // Track view count
  isDeleted Boolean  @default(false) // Soft delete
  deletedAt DateTime? // When it was deleted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  // Add indexes for better query performance
  @@index([isDeleted, createdAt(sort: Desc)]) // For main listing queries
  @@index([userId]) // For user's posts
  @@index([createdAt(sort: Desc)]) // For chronological ordering
  @@map("family_board")
}

enum UserRole {
  ADMIN
  MEMBER
}

enum Department {
  INTERCESSION
  FAMILY
}

enum DayType {
  MONDAY
  SATURDAY
}
